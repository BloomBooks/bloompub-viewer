{
  "name": "bloompub-viewer",
  "version": "1.0.1",
  "author": "Bloom Devs",
  "description": "Viewer for Bloom Digital books",
  "license": "MIT",
  "main": "./dist/electron/main.js",
  "scripts": {
    "build": "node .electron-react/build.js && electron-builder",
    "build:clean": "cross-env BUILD_TARGET=clean node .electron-react/build.js",
    "release": "yarn build -p always",
    "dev": "node .electron-react/dev-runner.js",
    "lint": "eslint \"./**/!(*.d).ts{,x}\""
  },
  "build": {
    "productName": "BloomPUB Viewer",
    "appId": "org.sil.bloompub-viewer",
    "directories": {
      "output": "output"
    },
    "files": [
      "dist/electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/windows.ico",
      "publish": [
        "github"
      ],
      "fileAssociations": [
        {
          "ext": "bloomd",
          "name": "BloomPUB File",
          "role": "Viewer"
        },
        {
          "ext": "bloompub",
          "name": "BloomPUB File",
          "role": "Viewer"
        },
        {
          "ext": "BloomPUB",
          "name": "BloomPUB File",
          "role": "Viewer"
        },
        {
          "ext": "bloomPUB",
          "name": "BloomPUB File",
          "role": "Viewer"
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "assets/icon.icns",
      "fileAssociations": [
        {
          "ext": "bloompub",
          "name": "BloomPUB File",
          "role": "Viewer"
        }
      ]
    },
    "linux": {
      "target": "deb",
      "maintainer": "stephen_mcconnel@sil.org",
      "icon": "assets/linux",
      "fileAssociations": [
        {
          "ext": "bloompub",
          "name": "BloomPUB File",
          "role": "Viewer"
        }
      ]
    },
    "deb": {}
  },
  "dependencies": {
    "@emotion/react": "^11.10.6",
    "@octokit/rest": "^18.0.0",
    "@types/archiver": "^3.0.0",
    "@types/temp": "^0.8.34",
    "@types/unzipper": "^0.10.3",
    "archiver": "^3.1.1",
    "bloom-player": "^2.1.25",
    "compare-versions": "^3.6.0",
    "electron-log": "^4.2.2",
    "electron-updater": "^4.3.1",
    "fs": "^0.0.1-security",
    "path": "^0.12.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-toastify": "9.0.3",
    "temp": "^0.9.1",
    "unzipper": "^0.10.8"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@emotion/babel-plugin": "^11.10.6",
    "@emotion/eslint-plugin": "^11.10.0",
    "@types/electron": "^1.6.10",
    "@types/enzyme": "^3.10.4",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/node": "^12.12.27",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "ajv": "^6.11.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-register": "^6.26.0",
    "cfonts": "^2.5.1",
    "chai": "^4.2.0",
    "chalk": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "cross-env": "^7.0.0",
    "css-loader": "^3.4.2",
    "del": "^5.1.0",
    "devtron": "^1.4.0",
    "electron": "^7.1.11",
    "electron-builder": "^22.3.2",
    "electron-debug": "^3.0.1",
    "electron-devtools-installer": "^2.2.4",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "file-loader": "^5.0.2",
    "fork-ts-checker-webpack-plugin": "^4.0.3",
    "html-webpack-plugin": "^3.2.0",
    "inject-loader": "^4.0.1",
    "less-loader": "^5.0.0",
    "mini-css-extract-plugin": "^0.9.0",
    "multispinner": "^0.2.1",
    "node-loader": "^0.6.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "react-hot-loader": "^4.12.19",
    "sass-loader": "^8.0.2",
    "spectron": "^10.0.0",
    "style-loader": "^1.1.3",
    "terser-webpack-plugin": "^2.3.4",
    "ts-loader": "^6.2.1",
    "tslint": "^6.0.0",
    "typescript": "^4.9.5",
    "url-loader": "^3.0.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.2",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-merge": "^4.2.2"
  },
  "packageManager": "yarn@1.22.19",
  "volta": {
    "node": "16.13.0",
    "yarn": "1.22.19"
  }
}
