{
  "name": "bloompub-viewer",
  "version": "0.2.7",
  "author": "Bloom Devs",
  "description": "Viewer for Bloom Digital books",
  "license": "MIT",
  "main": "./dist/electron/main.js",
  "scripts": {
    "build": "node .electron-react/build.js && electron-builder",
    "build:dir": "node .electron-react/build.js && electron-builder --dir",
    "build:clean": "cross-env BUILD_TARGET=clean node .electron-react/build.js",
    "build:web": "cross-env BUILD_TARGET=web node .electron-react/build.js",
    "release": "yarn build -p always",
    "dev": "node .electron-react/dev-runner.js",
    "lintx": "eslint --ext .ts,.tsx -f ./node_modules/eslint-friendly-formatter src",
    "lint": "",
    "lint:fix": "eslint --ext .ts,.tsx -f ./node_modules/eslint-friendly-formatter --fix src",
    "pack": "yarn run pack:main && yarn run pack:renderer",
    "pack:main": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-react/webpack.main.config.js",
    "pack:renderer": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-react/webpack.renderer.config.js",
    "postinstall": "yarn run lint:fix",
    "test": "yarn run test:unit && yarn run test:e2e",
    "test:unit": "jest -c jest.unit.config.js",
    "test:e2e": "yarn run pack && jest -c jest.e2e.config.js"
  },
  "build": {
    "productName": "BloomPUB Viewer",
    "appId": "org.sil.bloompub-viewer",
    "directories": {
      "output": "output"
    },
    "files": [
      "dist/electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/windows.ico",
      "publish": [
        "github"
      ],
      "fileAssociations": [
        {
          "ext": "bloomd",
          "name": "BloomPUB File",
          "role": "Viewer"
        },
        {
          "ext": "bloompub",
          "name": "BloomPUB File",
          "role": "Viewer"
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "build/icon.icns",
      "fileAssociations": [
        {
          "ext": "bloompub",
          "name": "BloomPUB File",
          "role": "Viewer"
        }
      ]
    },
    "linux": {
      "target": "deb",
      "maintainer": "stephen_mcconnel@sil.org",
      "icon": "build/linux",
      "fileAssociations": [
        {
          "ext": "bloompub",
          "name": "BloomPUB File",
          "role": "Viewer"
        }
      ]
    },
    "deb": {}
  },
  "dependencies": {
    "@emotion/core": "^10.0.28",
    "@octokit/rest": "^18.0.0",
    "@types/archiver": "^3.0.0",
    "@types/temp": "^0.8.34",
    "@types/unzipper": "^0.10.3",
    "archiver": "^3.1.1",
    "bloom-player": "^2.0.48",
    "compare-versions": "^3.6.0",
    "electron-log": "^4.2.2",
    "electron-updater": "^4.3.1",
    "fs": "^0.0.1-security",
    "path": "^0.12.7",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-toastify": "^6.0.6",
    "temp": "^0.9.1",
    "unzipper": "^0.10.8"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@types/electron": "^1.6.10",
    "@types/enzyme": "^3.10.4",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^25.1.1",
    "@types/node": "^12.12.27",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "ajv": "^6.11.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-register": "^6.26.0",
    "cfonts": "^2.5.1",
    "chai": "^4.2.0",
    "chalk": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "cross-env": "^7.0.0",
    "css-loader": "^3.4.2",
    "del": "^5.1.0",
    "devtron": "^1.4.0",
    "electron": "^7.1.11",
    "electron-builder": "^22.3.2",
    "electron-debug": "^3.0.1",
    "electron-devtools-installer": "^2.2.4",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "eslint": "^7.3.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-html": "^6.0.2",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-standard": "^4.0.1",
    "file-loader": "^5.0.2",
    "fork-ts-checker-webpack-plugin": "^4.0.3",
    "html-webpack-plugin": "^3.2.0",
    "inject-loader": "^4.0.1",
    "jest": "^25.1.0",
    "less-loader": "^5.0.0",
    "mini-css-extract-plugin": "^0.9.0",
    "multispinner": "^0.2.1",
    "node-loader": "^0.6.0",
    "node-sass": "^4.13.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "react-hot-loader": "^4.12.19",
    "sass-loader": "^8.0.2",
    "spectron": "^10.0.0",
    "style-loader": "^1.1.3",
    "terser-webpack-plugin": "^2.3.4",
    "ts-jest": "^25.1.0",
    "ts-loader": "^6.2.1",
    "tslint": "^6.0.0",
    "typescript": "^3.7.5",
    "url-loader": "^3.0.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.2",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-merge": "^4.2.2"
  }
}
